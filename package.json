{
  "name": "jsquaredadventures",
  "version": "0.3.1",
  "description": "Princess and I ",
  "author": "Jevon Thompson",
  "license": "MIT",
  "homepage": "https://jsquaredadventures.com",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev:client": "cd client && bun run dev",
    "dev:server": "bunx wrangler dev --config server/wrangler.toml",
    "dev:shared": "cd shared && bun run dev",
    "dev": "concurrently \"bun run dev:shared\" \"bun run dev:server\" \"bun run dev:client\"",
    "build:client": "cd client && bun run build",
    "build:shared": "cd shared && bun run build",
    "build:server": "cd server && bun run build",
    "build": "bunx tsc --build"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "cloudflare"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.0",
    "react-router": "^7.8.0",
    "wrangler": "^4.28.1"
  }
}
