{
  "name": "jsquaredadventures",
  "version": "0.3.1",
  "description": "Princess and I ",
  "author": "Jevon Thompson",
  "license": "MIT",
  "homepage": "https://jsquaredadventures.com",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "build:client": "bunx vite build --cwd ./client",
    "build:shared": "tsc -b ./shared",
    "build:server": "tsc -b ./server",
    "build": "tsc -b && bun run build:client && bun run postbuild",
    "postbuild": "mkdir -p dist/functions && cp server/dist/index.js dist/functions/[[path]].js && cp -r client/dist/* dist/"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "cloudflare"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "react-router": "^7.6.2"
  }
}
