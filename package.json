{
  "name": "my-bhvr-app",
  "version": "0.3.1",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "build:client": "bunx vite build --cwd ./client",
    "build:shared": "bunx tsc -p ./shared/tsconfig.json",
    "build:server": "bunx tsc -p ./server/tsconfig.json",
    "build": "bun run build:shared && bun run build:server && bun run build:client && bun run postbuild",
    "postbuild": "mkdir -p dist/functions && cp server/dist/index.js dist/functions/[[path]].js && cp -r client/dist/* dist/"
    "build:shared": "cd shared && bun run build",
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "cloudflare"
  ],
  "devDependencies": {
    "bun-types": "latest",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.31.1",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "react-router": "^7.6.2"
  }
}
